<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/buttonLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/closet1"
                    android:background="@drawable/closetonbtn"
                    android:visibility="gone"
                    android:layout_width="150dp"
                    android:layout_height="190dp" />
                <Button
                    android:id="@+id/closet2"
                    android:background="@drawable/closetonbtn"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_width="150dp"
                    android:layout_height="190dp" />

                <Button
                    android:id="@+id/addbtn1"
                    android:background="@drawable/closetplusbtn"
                    android:visibility="invisible"
                    android:layout_width="150dp"
                    android:layout_height="190dp" />
                <Button
                    android:id="@+id/addbtn2"
                    android:background="@drawable/closetplusbtn"
                    android:visibility="invisible"
                    android:layout_marginLeft="10dp"
                    android:layout_width="150dp"
                    android:layout_height="190dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/closet3"
                    android:background="@drawable/closetonbtn"
                    android:visibility="gone"
                    android:layout_width="150dp"
                    android:layout_height="190dp" />
                <Button
                    android:id="@+id/closet4"
                    android:background="@drawable/closetonbtn"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:layout_width="150dp"
                    android:layout_height="190dp" />

                <Button
                    android:id="@+id/addbtn3"
                    android:background="@drawable/closetplusbtn"
                    android:visibility="invisible"
                    android:layout_width="150dp"
                    android:layout_height="190dp" />
                <Button
                    android:id="@+id/addbtn4"
                    android:background="@drawable/closetplusbtn"
                    android:visibility="invisible"
                    android:layout_marginLeft="10dp"
                    android:layout_width="150dp"
                    android:layout_height="190dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/closetInside"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clothinkMainColor">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <Button
                    android:layout_gravity="bottom"
                    android:id="@+id/cancelButton"
                    android:text="X"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal|center_vertical">
                <TextView
                    android:id="@+id/closetName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <Button
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/waterdrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="습도"
                        android:textSize="40sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="모피"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가죽"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="실크"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="스웨터"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </FrameLayout>
</LinearLayout>
